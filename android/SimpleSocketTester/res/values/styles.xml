<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:background">#222</item>
    </style>
    
    <style name="title_text" parent="AppBaseTheme">
        <item name="android:padding">4dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize" >29sp</item>
		<item name="android:shadowDx" >1.5</item>
    </style>
    
    
    <style name="btn_menu"  parent="@android:style/Widget.Button">
		<item name="android:layout_width">match_parent</item>
		<item name="android:typeface">monospace</item>
		<item name="android:textColor">#fff</item>
		<item name="android:gravity" >center</item>
		<item name="android:textSize" >20sp</item>
		<item name="android:background">@drawable/menu_button</item>
		<item name="android:layout_margin">10dp</item>
    </style>
    
    <style name="txt_input">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/edittext</item>
    </style>
    

</resources>
